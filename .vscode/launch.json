{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compilar e Executar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,  // Abre o terminal externo
            // "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar impressão de formato padrão para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar e Executar",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",  // Ajuste conforme o seu sistema
            "logging": { "trace": true, "engineLogging": true, "traceResponse": true }
        }
    ]
}
